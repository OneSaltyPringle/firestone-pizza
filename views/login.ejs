<%- include('partials/header', { title: 'Login', user: user }) %>

<section class="section-padding">
  <div class="container d-flex justify-content-center">
    <div class="custom-block bg-white shadow p-5" style="max-width: 400px; width: 100%;">
      <h2 class="mb-4 text-center">Login</h2>

      <form method="POST" action="/login">

        <div class="mb-3">
          <input type="text" placeholder="Username" class="form-control" id="username" name="username" required value="<%= username %>">
        </div>

        <div class="mb-3">
          <input type="password" placeholder="Password" class="form-control" id="password" name="password" required>
        </div>

        <div class="d-flex justify-content-between align-items-center">
          <button type="submit" class="btn custom-btn">Login</button>
          <a href="/forgot" class="text-decoration-none small">Forgot Password?</a>
        </div>
      </form>

      <hr class="my-4">

      <p class="text-center">
        Don't have an account?
        <a href="/register" class="fw-bold text-danger">Register Here</a>
      </p>

      <% if (message) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= message %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>

    </div>
  </div>
</section>

<%- include('partials/footer') %>

<style>
  .form-control {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 1rem;
  }
  .form-control:focus {
    border-color: #d92d20;
    outline: none;
    box-shadow: 0 0 0 0.2rem rgba(217, 45, 32, 0.25);
  }
</style>
